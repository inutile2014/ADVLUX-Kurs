#C-> Prozess generieren

#include <stdio.h>
#include <sys/types.h>
#include <unistd.h>


void main() {
   pid_t pid = 0;

   printf("parent here\n");

   pid = fork();
        if(pid == 0){

        printf("child here %d\n", pid);
        sleep(30);
}
   printf("i'm here %d\n", pid);

}






